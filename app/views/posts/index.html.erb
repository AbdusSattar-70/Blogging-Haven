<section class = 'postList'>
<button><%= link_to 'Home', root_path %></button>
<div class='user'>
    <img class='userImg' src ='<%= @user.photo%>'/>
    <div class='usernamePostCount'>
    <h2 class= 'username'><%= link_to @user.name, user_path(@user) %></h2>
    <p class ='postCount'> Number of posts: <%= @user.posts_counter %></p>
    </div>
</div>
<div>
   <%@posts.each do |post|  %>
  <div class="postItem">
    <h3><%= post.title %> <%= link_to 'see details', user_post_path(@user, post) %></h3>
    <p><%= post.text %></p>
    <p> Comments:<%= post.comments_counter %> Likes:<%= post.likes_counter %></p>
  <div>
</div>
<div class='Comments'>
<% post.recent_comments.each do |comment| %>
<p> <%= link_to comment.author.name, user_path(@user)%> : <%= comment.text %></p>
<% end %>
</div>
<% end %>

</section>

