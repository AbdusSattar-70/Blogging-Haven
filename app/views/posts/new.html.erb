<section class='create_new_post'>
  <%= navigation %>
  <h2>Create New Post</h2>
  <div class="add_new_post">
   <%= form_with(model: @post, url: '/users/:user_id/posts' ) do |f| %>
        <%= f.text_field :title, placeholder: 'Write your post title' %>
        <%= f.text_area :text, placeholder: 'Write your post here' %>
      <%= f.submit class: 'create_post_btn' %>
    <% end %>
  </div>
</section>
